# =====================================================
# PETCARE - VARIABLES DE ENTORNO
# =====================================================
# IMPORTANTE: Copia este archivo como .env y completa
# con tus valores reales. NUNCA commits .env a Git
# =====================================================

# ENTORNO
NODE_ENV=development
PORT=3000

# =====================================================
# BASE DE DATOS MYSQL
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=petcare_db
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_DIALECT=mysql
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =====================================================
# AUTH0 CONFIGURATION
# =====================================================
# Obtén estos valores desde tu dashboard de Auth0
# https://manage.auth0.com/

AUTH0_DOMAIN=tu-tenant.auth0.com
AUTH0_AUDIENCE=https://api.petcare.cl
AUTH0_CLIENT_ID=tu_client_id_aqui
AUTH0_CLIENT_SECRET=tu_client_secret_aqui
AUTH0_ISSUER_BASE_URL=https://tu-tenant.auth0.com
AUTH0_TOKEN_SIGNING_ALG=RS256

# Configuración de sesiones Auth0
AUTH0_SECRET=una_cadena_aleatoria_muy_larga_y_secreta_minimo_32_caracteres
AUTH0_BASE_URL=http://localhost:3000
AUTH0_CLIENT_CALLBACK_URL=http://localhost:3000/api/auth/callback

# =====================================================
# AWS S3 CONFIGURATION
# =====================================================
# Obtén estas credenciales desde AWS IAM
# https://console.aws.amazon.com/iam/

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_access_key_aqui
AWS_SECRET_ACCESS_KEY=tu_secret_key_aqui

# Buckets de S3
S3_BUCKET_PETS=petcare-pets-images
S3_BUCKET_MEDICAL=petcare-medical-documents
S3_BUCKET_CERTIFICATES=petcare-certificates
S3_BUCKET_PRODUCTS=petcare-products
S3_BUCKET_GENERAL=petcare-general

# URL base de S3 (opcional, se puede construir automáticamente)
S3_BASE_URL=https://petcare-pets-images.s3.amazonaws.com

# =====================================================
# CORS Y SEGURIDAD
# =====================================================
# Dominios permitidos (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# Secret para JWT adicionales (si usas además de Auth0)
JWT_SECRET=otro_secret_muy_seguro_para_tokens_adicionales_minimo_64_caracteres

# Encriptación de datos sensibles
ENCRYPTION_KEY=clave_de_encriptacion_aes_256_minimo_32_caracteres_alfanumericos

# =====================================================
# NOTIFICACIONES PUSH
# =====================================================

# Firebase Cloud Messaging
FCM_SERVER_KEY=tu_firebase_server_key_aqui
FCM_PROJECT_ID=petcare-firebase-project

# O AWS SNS
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY=tu_sns_access_key
AWS_SNS_SECRET_KEY=tu_sns_secret_key

# =====================================================
# EMAIL (Opcional)
# =====================================================
# Puedes usar SendGrid, AWS SES, etc.

SENDGRID_API_KEY=tu_sendgrid_api_key_aqui
EMAIL_FROM=noreply@petcare.cl
EMAIL_FROM_NAME=PetCare Chile

# O AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=tu_ses_access_key
AWS_SES_SECRET_KEY=tu_ses_secret_key

# =====================================================
# SERVICIOS EXTERNOS
# =====================================================

# Google Maps API (para geolocalización)
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key_aqui

# Mapbox (alternativa a Google Maps)
MAPBOX_ACCESS_TOKEN=tu_mapbox_token_aqui

# =====================================================
# PAGOS (Opcional para marketplace)
# =====================================================

# Webpay Plus (Transbank Chile)
WEBPAY_COMMERCE_CODE=tu_codigo_comercio
WEBPAY_API_KEY=tu_api_key_webpay
WEBPAY_ENVIRONMENT=integration
# integration o production

# Mercado Pago
MERCADOPAGO_PUBLIC_KEY=tu_public_key
MERCADOPAGO_ACCESS_TOKEN=tu_access_token
MERCADOPAGO_WEBHOOK_SECRET=tu_webhook_secret

# =====================================================
# RATE LIMITING Y CACHÉ
# =====================================================

# Redis (opcional, para caché y rate limiting avanzado)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================================
# LOGGING Y MONITOREO
# =====================================================

# Sentry (para tracking de errores)
SENTRY_DSN=tu_sentry_dsn_aqui

# Log Level
LOG_LEVEL=info
# options: error, warn, info, debug

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================

# URLs de frontend
WEB_APP_URL=http://localhost:3001
MOBILE_APP_DEEP_LINK=petcare://

# Límites
MAX_FILE_SIZE_MB=10
MAX_PETS_PER_USER=10
MAX_IMAGES_PER_PET=5

# QR Code
QR_CODE_BASE_URL=https://petcare.cl/qr/

# Certificados médicos
PDF_LOGO_URL=https://petcare.cl/logo.png

# =====================================================
# DESARROLLO Y TESTING
# =====================================================

# Base de datos de testing
TEST_DB_NAME=petcare_test_db

# Deshabilitar rate limiting en desarrollo
DISABLE_RATE_LIMIT=false

# Mostrar queries SQL en consola
SQL_LOGGING=false

# =====================================================
# NOTAS IMPORTANTES
# =====================================================
# 1. Genera secrets seguros con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 2. En producción, usa variables de entorno del hosting (Heroku, AWS, Railway, etc.)
# 3. Nunca compartas este archivo con valores reales
# 4. Rota los secrets periódicamente
# 5. Usa AWS Secrets Manager o similar en producción
